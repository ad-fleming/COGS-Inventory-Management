<div class="row center-content">
    <div class="col s1 hide-on-small-only"> </div>
    <div class="col s12 m8">
        <div class="card grey darken-4 section">
            <div class="card-content white-text">
                <span class="card-title">
                    <h2>COGS</h2>
                </span>
                <p class="section">Please enter in the details of the new item you'd like to add to your inventory.</p>
            </div>
            <form class="white-text logo-push" id="add-item-form">
                <div class="row">

                    <div class="col s6 l6">
                        <p>Name of Item:</p>
                        <input class="white-text" type="text" id="name-of-item">
                        <p>Category:</p>
                        <input class="white-text" type="text"  id="category">
                        <p>Distributor:</p>
                        <input class="white-text" type="text"  id="distributor">
                        <p>Unit Price:</p>
                        <input class="white-text" type="number"  id="unit-price">
                    </div>

                    <div class="col s6 l6">
                        <p>Unit Par:</p>
                        <input class="white-text" type="number"  id="unit-par">
                        <p>Items Per Unit:</p>
                        <input class="white-text" type="number"  id="items-per-unit">
                        <p>Item Count Type:</p>
                        <input class="white-text" type="text"  id="item-count-type">
                        <p>Item Count Par:</p>
                        <input class="white-text" type="number"  id="item-count-par">
                        
                    </div>
                    
                </div>
            </form>
            <div class="row">
                <div class="col s5 l5 section"></div>
                <div class="col s4 l4">
                    <button class="ui button lime accent-2 right l12" id="add-item-button">
                        <p class="black-font">Add Item</p>
                    </button>
                </div>
                <div class="col s3 l3">
                    <button class="ui button lime accent-2 right l12" type="#" id="finished-item">
                        <p class="black-font">Finished</p>
                    </button>
                </div>
                <div class="col s1 l1"></div>
            </div>
        </div>
    </div>

    <div class="col s2 hide-on-small-only"> </div>
</div>


